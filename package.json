{
  "name": "@shetty4l/diagrams",
  "version": "0.0.0-dev",
  "description": "Declarative animated architecture diagrams for Remotion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shetty4l/diagrams.git"
  },
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./engine": "./src/engine/DiagramEngine.tsx",
    "./components": "./src/components/index.ts",
    "./icons": "./src/icons/index.tsx",
    "./theme": "./src/theme/index.ts"
  },
  "files": [
    "src/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/",
    "format:check": "biome check src/",
    "validate": "bun run typecheck && bun run lint && bun run format:check",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19",
    "remotion": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.0.0",
    "oxlint": "^1.48.0",
    "react": "^19",
    "react-dom": "^19",
    "remotion": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
